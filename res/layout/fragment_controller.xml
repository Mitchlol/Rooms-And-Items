<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
	<LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:orientation="horizontal">
		<View 
		android:layout_width="0px"
		android:layout_height="0px"
	    android:layout_weight="1" 
	    />
	    <Button android:id="@+id/up"
		android:layout_width="0px"
		android:layout_height="wrap_content" 
		android:text="@string/contoller_button_move"
		android:layout_weight="1"
		/>
	    <View 
		android:layout_width="0px"
		android:layout_height="0px"
	    android:layout_weight="1" 
	    />
	</LinearLayout>
	<LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:orientation="horizontal">
	    <Button android:id="@+id/left"
		android:layout_width="0px"
		android:layout_height="wrap_content" 
		android:text="@string/contoller_button_move"
		android:layout_weight="1"
		/>
		 <View 
		android:layout_width="0px"
		android:layout_height="0px"
	    android:layout_weight="1" 
	    />
	    <Button android:id="@+id/right"
		android:layout_width="0px"
		android:layout_height="wrap_content" 
		android:text="@string/contoller_button_move"
		android:layout_weight="1"
		/>
	</LinearLayout>
	<LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:orientation="horizontal">
		<View 
		android:layout_width="0px"
		android:layout_height="0px"
	    android:layout_weight="1" 
	    />
	    <Button android:id="@+id/down"
		android:layout_width="0px"
		android:layout_height="wrap_content" 
		android:text="@string/contoller_button_move"
		android:layout_weight="1"
		/>
	    <View 
		android:layout_width="0px"
		android:layout_height="0px"
	    android:layout_weight="1" 
	    />
	</LinearLayout>
    <LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:orientation="horizontal">
		<Button android:id="@+id/pickup"
		android:layout_width="0px"
		android:layout_height="wrap_content" 
		android:text="@string/contoller_button_pickup"
		android:layout_weight="1" 
		/>
		<Button android:id="@+id/putdown"
		android:layout_width="0px"
		android:layout_height="wrap_content" 
		android:text="@string/contoller_button_putdown"
		android:layout_weight="1" 
		/>
	</LinearLayout>
</LinearLayout>
